@model IEnumerable<AppointmentDoctorVM>

@{
    ViewData["Title"] = "All Doctor Appointment";
}

<h1>Get All Appointment</h1>
@if (!Model.Any())
{
    <div class="alert alert-warning" role="alert">
        <i class="bi bi-exclamation-triangle"></i>
        NO appointment
    </div>
}
else
{
    @if (ViewData["FilterNotExist"] is not null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewData["FilterNotExist"]
        </div>
    }

    @if (ViewData["DoctorNotExist"] is not null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewData["DoctorNotExist"]
        </div>
    }
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AppointmentDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VisitLength)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="align-middle">
                    <td>@item.AppointmentDate</td>
                    <td>@item.VisitLength</td>
                </tr>
            }
        </tbody>
    </table>
}

